<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			/WEB-INF/classes/cn/digitalpublishing/resource/appContext*.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <servlet>
    <servlet-name>InitParam</servlet-name>
    <servlet-class>
			cn.com.daxtech.framework.web.init.ParamConfig
		</servlet-class>
    <init-param>
      <param-name>Path</param-name>
      <param-value>
				/WEB-INF/classes/cn/digitalpublishing/resource/param.properties
			</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>InitParam</servlet-name>
    <url-pattern>/InitParam</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InitService</servlet-name>
    <servlet-class>cn.com.daxtech.framework.web.init.InitServiceConfig</servlet-class>
    <init-param>
      <param-name>services</param-name>
      <param-value>/WEB-INF/classes/cn/digitalpublishing/resource/service.properties</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>InitService</servlet-name>
    <url-pattern>/InitService</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InitInterface</servlet-name>
    <servlet-class>
			cn.digitalpublishing.servlet.InitInterface
		</servlet-class>
    <init-param>
      <param-name>interfaceService</param-name>
      <param-value>rest</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>InitInterface</servlet-name>
    <url-pattern>/InitInterface</url-pattern>
  </servlet-mapping>
  <!-- 邮箱初始化配置 -->
 	<listener>
		<listener-class>cn.digitalpublishing.config.StartInit</listener-class>
	</listener>
  
  
  <filter>
		<filter-name>permissionFilter</filter-name>
		<filter-class>cn.com.daxtech.framework.web.filter.PermissionFilter</filter-class>
		<!-- local config -->
		<init-param>
			<param-name>permissionURL</param-name>
			<param-value>http://127.0.0.1:8080/WebGate/getPermissions</param-value>
		</init-param>
		<init-param>
			<param-name>loginInfoURL</param-name>
			<param-value>http://127.0.0.1:8080/WebGate/getLoginInfo</param-value>
		</init-param>
		<init-param>
			<param-name>loginURL</param-name>
			<param-value>http://127.0.0.1:8080/WebGate</param-value>
		</init-param>
		<init-param>
			<param-name>navigationURL</param-name>
			<param-value>http://127.0.0.1:8080/WebGate/getNavigation.xml</param-value>
		</init-param>
		 <!-- local config end -->
		<!-- online config start 
		<init-param>
			<param-name>permissionURL</param-name>
			<param-value>http:///getPermissions</param-value>
		</init-param>
		<init-param>
			<param-name>loginInfoURL</param-name>
			<param-value>http:///getLoginInfo</param-value>
		</init-param>
		<init-param>
			<param-name>loginURL</param-name>
			<param-value>http://rec.cnpereading.com</param-value>
		</init-param>
		<init-param>
			<param-name>navigationURL</param-name>
		 online config end -->
		<init-param>
			<param-name>menuMap</param-name>
			<param-value>menuMap</param-value>
		</init-param>
		<init-param>
			<param-name>funMap</param-name>
			<param-value>funMap</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>permissionFilter</filter-name>
		<url-pattern>/pages/*</url-pattern>
	</filter-mapping>
  
  
  
  <filter>
    <filter-name>LanguageFilter</filter-name>
    <filter-class>
			cn.digitalpublishing.filter.LanguageFilter
		</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LanguageFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>
			/WEB-INF/classes/cn/digitalpublishing/resource/log4j.properties
		</param-value>
  </context-param>
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>6000</param-value>
  </context-param>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>Push</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
  </listener>
  <servlet>
    <servlet-name>Skin</servlet-name>
    <servlet-class>cn.com.daxtech.framework.Skin.SkinConfig</servlet-class>
    <init-param>
      <param-name>url</param-name>
      <param-value>http://127.0.0.1:8080/WebGate</param-value>
    </init-param>
    <init-param>
      <param-name>css</param-name>
      <param-value>/css/ui.css,/css/pub.css</param-value>
    </init-param>
    <init-param>
      <param-name>js</param-name>
      <param-value>/script/jquery-1.8.2.js</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Skin</servlet-name>
    <url-pattern>/Skin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>i18n</servlet-name>
    <servlet-class>cn.com.daxtech.framework.Internationalization.LangConfig</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/classes/cn/digitalpublishing/resource/i18n.properties</param-value>
    </init-param>
    <init-param>
      <param-name>default</param-name>
      <param-value>default</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>i18n</servlet-name>
    <url-pattern>/i18n</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
				/WEB-INF/classes/cn/digitalpublishing/resource/mvc-config.xml
			</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>*.xml</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.swf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/dawson/metadata/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/ereading/metadata/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.xls</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.rar</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.zip</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.gif</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <taglib>
      <taglib-uri>daxtech-taglib.tld</taglib-uri>
      <taglib-location>
				/WEB-INF/taglib/daxtech-taglib.tld
			</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>zhima-taglib.tld</taglib-uri>
      <taglib-location>
				/WEB-INF/taglib/zhima-taglib.tld
			</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>ingenta-taglib.tld</taglib-uri>
      <taglib-location>
				/WEB-INF/taglib/ingenta-taglib.tld
			</taglib-location>
    </taglib>
  </jsp-config>
</web-app>